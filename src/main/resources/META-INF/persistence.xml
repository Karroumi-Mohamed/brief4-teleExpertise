<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    
    <persistence-unit name="telemedicine-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <class>com.tele.model.User</class>
        <class>com.tele.model.Admin</class>
        <class>com.tele.model.Nurse</class>
        <class>com.tele.model.GeneralPractitioner</class>
        <class>com.tele.model.Specialist</class>
        <class>com.tele.model.Patient</class>
        <class>com.tele.model.Consultation</class>
        <class>com.tele.model.ExpertiseRequest</class>
        <class>com.tele.model.MedicalProcedure</class>
        <class>com.tele.model.TimeSlot</class>
        <class>com.tele.model.QueueEntry</class>
        
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/tele_expertise"/>
            <property name="jakarta.persistence.jdbc.user" value="mohamed"/>
            <property name="jakarta.persistence.jdbc.password" value="12345678"/>
            
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <property name="hibernate.connection.pool_size" value="10"/>
        </properties>
    </persistence-unit>
</persistence>
